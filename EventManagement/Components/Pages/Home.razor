<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Welcome to <span class="text-danger">Event Manager</span></h2>
        <p class="lead text-muted">Manage, explore and book amazing events!</p>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body text-center">
            <AuthorizeView>
                <NotAuthorized>
                    <p class="mb-3">
                        <span class="text-secondary">You are not logged in.</span><br />
                        <a class="btn btn-primary btn-sm fw-bold me-2 mt-2" href="/login">Login</a>
                        <a class="btn btn-outline-primary btn-sm fw-bold mt-2" href="/register">Register</a>
                    </p>
                </NotAuthorized>
                <Authorized>
                    <p class="mb-0 fs-5">
                        Logged in as <span class="fw-semibold text-primary">@context.User.Identity?.Name</span>
                    </p>
                    <a class="btn btn-danger mt-3" href="/logout">Logout</a>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</div>
