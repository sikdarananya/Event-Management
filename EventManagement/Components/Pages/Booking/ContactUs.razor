        smtp.Connect("smtp.ethereal.email", 587, MailKit.Security.SecureSocketOptions.StartTls);
        smtp.Authenticate("zion.weimann76@ethereal.email", "2dYPR4JMNqphse77Ds");
        smtp.Send(email);
        smtp.Disconnect(true);

        mailSent = true;







    }
