<div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <div class="sidebar bg-light shadow-sm p-3">
        <NavMenu />
    </div>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex flex-column">
        <!-- Top Bar -->
        <div class="d-flex justify-content-between align-items-center border-bottom px-4 py-2 bg-white shadow-sm">
            <a class="text-decoration-none text-primary fw-semibold" href="https://learn.microsoft.com/aspnet/core/" target="_blank">
                About
            </a>
            <AuthorizeView>
                <NotAuthorized>
                    <a class="btn btn-sm btn-outline-primary" href="/login">Login</a>
                </NotAuthorized>
                <Authorized>
                    <a class="btn btn-sm btn-danger" href="/logout">Logout</a>
                </Authorized>
            </AuthorizeView>
        </div>

        <!-- Page Body -->
        <article class="content px-4 py-3">
            @Body
        </article>
    </main>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="alert alert-danger position-fixed bottom-0 start-50 translate-middle-x mb-3 shadow d-none" style="z-index: 1050;">
    An unhandled error has occurred.
    <a href="" class="btn btn-link text-white text-decoration-underline">Reload</a>
    <button class="btn-close text-white dismiss" aria-label="Close"></button>
</div>

